!!! XML
!!!
%html{:xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'fr', :lang => 'fr'}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/xhtml; charset=utf-8'}
    %link{:rel => 'stylesheet', :href => 'cvstyle.css', :type => 'text/css'}
    %title== #{cv.name} - #{resources.cv}

  %body
    .hresume
      #actions
        %ul
          - other_langs.each do |other_lang|
            %li.alternate_lang
              %a{:href => "index.#{other_lang}.html"}= other_lang
          %li
            %a{:href => "#{resources.cv}-#{cv.name}.#{lang}.odt"}
              %img{:src => "odt.png"}
              odt
          %li
            %a{:href => "#{resources.cv}-#{cv.name}.#{lang}.pdf"}
              %img{:src => "pdf.png"}
              pdf
    
      #contactinfo.vcard.section
        %h1.fn= cv.name
        %h2= cv.title.send(lang)
        %h3.subtitle= resources.contact

        .incontent
          .adr
            %span.street-address= cv.contact.address.street
            %br
            %span.locality== #{cv.contact.address.locality},
            %span.region= cv.contact.address.region
            %span.postal-code= cv.contact.address.zipcode
            %br
            %span.country-name= cv.contact.address.country
          %a.email{:href => "mailto:#{cv.contact.email}"}= cv.contact.email
          %br
          %a.url{:href => cv.contact.website}= cv.contact.website
          %br
          %a.value{:href => "tel:#{cv.contact.phone}"}= cv.contact.phone
          %br
          %br
          = cv.country_status.send(lang)
      
      #summary.section
        %h3.subtitle= resources.summary
        .summary.incontent
          %p= cv.summary.send(lang).lines_to_br
      
      #experience.vcalendar.section
        %h3.subtitle= resources.experience
        
        - cv.experiences.each do |exp|
          
          .experience.vevent.incontent
            %h3.location= exp.location
            
            %abbr.dtstart{:title => exp.date.start.strftime(resources.date_formatting)}= exp.date.start.strftime(resources.date_formatting)
            \- 
            - if exp.date.end
              %abbr.dtend{:title => exp.date.end.strftime(resources.date_formatting)}= exp.date.end.strftime(resources.date_formatting)
            - else
              = resources.today
            
            %p.summary
              - if exp.summary.send(lang)
                = exp.summary.send(lang).lines_to_br
            
            - if exp.tasks and exp.tasks.send(lang)
              %ul
                - exp.tasks.send(lang).each do |task|
                  %li
                    %span= task
       
      #skills.section
        %h3.subtitle= resources.skills
       
        .incontent
          %ul.multilist
            - cv.skills.each do |skill|
              %li.skill
                - if skill.is_a? OpenStruct
                  %span= skill.send(lang)
                - else
                  %span= skill
      
      #interests.section
        %h3.subtitle= resources.interests
        
        .incontent
          %ul
            - cv.interests.each do |interest|
              %li
                - if interest.is_a? OpenStruct
                  %span= interest.send(lang)
                - else
                  %span= interest

      #tool.section
        = resources.custom_tool
    
    - if credentials and credentials.google_analytics_tracker
      %script{:type => 'text/javascript'}
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      %script{:type => 'text/javascript'}
        try {
        == var pageTracker = _gat._getTracker('#{credentials.google_analytics_tracker}');
        pageTracker._trackPageview();
        } catch(err) {}